<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@android:color/white">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to MU Student Service App"
            style="@style/HeaderText"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:drawableLeft="@drawable/ic_profile"/>

        <Button
            android:id="@+id/btnRequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Request"
            android:drawableLeft="@android:drawable/ic_menu_add"/>

        <Button
            android:id="@+id/btnContacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contacts"
            android:drawableLeft="@android:drawable/ic_menu_call"/>

        <Button
            android:id="@+id/btnEmergency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Emergency"
            android:drawableLeft="@android:drawable/ic_menu_help"/>

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:drawableLeft="@android:drawable/ic_lock_power_off"/>

        <!-- Spacer to push the footer down -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Footer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We Really Care"
            style="@style/FooterText"
            android:layout_marginBottom="24dp"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>
</ScrollView>
